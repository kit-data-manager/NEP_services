<div class="ui grid container">
    <div class="ui padded grid" style="width:100%">
        <!--left side (details and content)-->
        <div class="ten wide column">
            <div class="ui padded grid">
                <!--row-->
                <div class="ui row">
                    <div class="eleven wide column">
                        <h3 class="ui header">{{schema_record.label}}</h3>
                    </div>
                    <div class="five wide right floated column">
                        <span class="ui tiny fluid blue label">
                            SchemaId: {{schema_record.schemaId}}<br/>
                            <div class="detail">Version: {{schema_record.schemaVersion}}</div>
                         </span>
                    </div>
                </div>
                <!--row-->
                <div class="ui row">
                    <div class="column">
                        <i class="info icon"  title="Definition"></i>
                        {{#if schema_record.definition}}
                                <i>{{schema_record.definition}}</i>
                            {{else}}
                                <i>No definition available</i>
                            {{/if}}
                    </div>
                </div>
                <!--row-->
                <div class="ui row">
                    <div class="column">
                        <i class="comment icon"  title="Comment"></i>
                        {{#if schema_record.comment}}
                            <i>{{schema_record.comment}}</i>
                        {{else}}
                            <i>No comment available</i>
                        {{/if}}
                    </div>
                </div>
                <!--row-->
                <div class="ui row">
                    <div class="column">
                        <i class="linkify icon" title="Related Resource"></i>
                        <a href='{{md_record.relatedResource.identifier}}'
                           target='_blank'>{{md_record.relatedResource.identifier}}</a></div>
                </div>
                <!--row-->
                <div class="ui row">
                    <div class="column">
                        <div class="ui segment">
                            <h5 class="ui header">Metadata Document</h5>
                            <a class="ui right corner label"  title="Viewer">
                                <i class="file icon"></i>
                            </a>
                            <!--div id="json-viewer-document"></div-->
                            <pre><code id="test" class="language-json">...</code></pre>
                        </div>
                        <div class="ui segment">
                            <h5 class="ui header">Downloads</h5>
                            <a class="ui right corner label"  title="Downloads">
                                <i class="download icon"></i>
                            </a>
                            <div class="ui fluid list" style="margin-left: 10px">
                                <div class="item">
                                    <div class="content">
                                        <div class="header">
                                            <a href='{{md_record.metadataDocumentUri}}' target='_blank'>Download Metadata</a></div>
                                        <div class="description">{{md_record.documentHash}}</div>
                                    </div>
                                </div>
                            </div>
                            <div class="ui fluid list" style="margin-left: 10px">
                                <div class="item">
                                    <div class="content">
                                        <div class="header">
                                            <a href='{{schema_record.schemaDocumentUri}}' target='_blank'>Download Schema</a></div>
                                        <div class="description">{{schema_record.schemaHash}}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--right side (metadata)-->
        <div class="six wide column">
            <div class="ui grid container" style="margin-top:10px;height:calc(100% - 10px)">
                <div class="ui flex-fill segment">
                    <h3>Metadata</h3>
                    <b>Type:</b><br/>
                    <span class="indent">{{schema_record.type}}</span><br/>
                    <b>MimeType:</b><br/>
                    <span class="indent">{{schema_record.mimeType}}</span><br/>
                    <b>Created at:</b><br/>
                    <span class="indent">{{formatDate md_record.createdAt}}</span><br/>
                    <b>Last Modified:</b><br/>
                    <span class="indent">{{formatDate md_record.lastUpdate}}</span><br/>
                </div>
            </div>
            <!--row-->
            <!--div class="ui row" style="margin-top: 20px">
                <div class="ui flex-fill segment">
                    <h3>Downloads</h3>
                    <div id="download_json" class="ui label download">
                        JSON
                    </div>
                    <div id="download_zip" class="ui label download">
                        ZIP
                    </div>
                </div>
            </div-->
        </div>
    </div>
</div>
