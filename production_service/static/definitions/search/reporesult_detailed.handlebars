<div class="ui grid container">
    <div class="ui padded grid">
        <!--left side (details and content)-->
        <div class="ten wide column">
            <div class="ui padded grid">
                <!--row-->
                <div class="ui row">
                    <div class="eleven wide column">
                        <h3 class="ui header">{{_source.metadata.titles.0.value}}</h3>
                    </div>
                    <div class="five wide right floated column">
                     <span class="ui tiny fluid blue label">
                         {{_source.metadata.resourceType.typeGeneral}}<br/>
                        <div class="detail">{{_source.metadata.resourceType.value}}</div>
            </span>
                    </div>
                </div>
                <!--row-->
                <div class="ui row">
                    <div class="column">
                        <span style="word-wrap: break-word;">
                            {{#creatorsList _source.metadata.creators}}{{/creatorsList}}
                        </span>
                    </div>
                </div>
                <!--row-->
                <div class="ui row">
                    <div class="column">
                        {{#if _source.metadata.descriptions.0.description}}
                        <i>{{_source.metadata.descriptions.0.description}}</i>
                        {{else}}
                        <i>No description available</i>
                        {{/if}}
                    </div>
                </div>
                <!--row-->
                <div class="ui row">
                    <div class="column">
                        <div class="ui segment">
                            <a class="ui left corner label">
                                <i class="file icon"></i>
                            </a>
                            {{#if _source.content.0.relativePath}}
                            {{#each _source.content}}
                            <div class="ui fluid list" style="margin-left: 10px">
                                <div class="item">
                                    <div class="content">
                                        <div class="header"><a href='{{contentLink this}}'
                                                               target='_blank'>{{relativePath}}</a></div>
                                        <div class="description">{{hash}}</div>
                                    </div>
                                </div>
                            </div>
                            {{/each}}
                            {{else}}
                            <i style="padding-left: 20px">No content uploaded, yet.</i>
                            {{/if}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--right side (metadata)-->
        <div class="six wide column">
            <div class="ui row">
                <div class="ui flex-fill segment">
                    <h3>Metadata</h3>
                    <b>Publisher:</b><br/>
                    <span class="indent">{{_source.metadata.publisher}}</span><br/>
                    <b>Publication Year:</b><br/>
                    <span class="indent">{{_source.metadata.publicationYear}}</span><br/>
                    <b>Created at:</b><br/>
                    <span class="indent">{{formatDate _source.created}}</span><br/>
                    <b>Last Modified:</b><br/>
                    <span class="indent">{{formatDate _source.lastUpdate}}</span><br/>
                    <b>License:</b><br/>
                    {{#if _source.metadata.rights.0.schemaId}}
                    <span class="indent">{{_source.metadata.rights.0.schemaId}}</span>
                    {{else}}
                    <span class="indent">No license assigned</span>
                    {{/if}}
                    <br/>
                    <b>Related Identifiers:</b><br/>
                    <div class="ui fluid divided list" style="margin-left: 10px">
                        {{#if _source.metadata.relatedIdentifiers.0.value}}
                        {{#each _source.metadata.relatedIdentifiers}}
                        <div class="item">
                            <div class="content">
                                <a class="header" href='{{value}}'>{{splitUrl value}}</a>
                                <div class="description">({{relationType}})</div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                        <div class="item">
                            <div class="content">
                                <div class="description">No related identifiers assigned</div>
                            </div>
                        </div>
                        {{/if}}
                    </div>
                    <b>Alternate Identifiers:</b><br/>
                    <div class="ui fluid divided list" style="margin-left: 10px">
                        {{#if _source.metadata.alternateIdentifiers.0.value}}
                        {{#each _source.metadata.alternateIdentifiers}}
                        <div class="item">
                            <div class="content">
                                <a class="header" href='{{value}}'>{{splitUrl value}}</a>
                                <div class="description">({{identifierType}})</div>
                            </div>
                        </div>
                        {{/each}}
                        {{else}}
                        <div class="item">
                            <div class="content">
                                <div class="description">No alternate identifiers assigned</div>
                            </div>
                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
            <!--row-->
            <div class="ui row" style="margin-top: 20px">
                <div class="ui flex-fill segment">
                    <h3>Downloads</h3>
                    <div id="download_json" class="ui label download">
                        JSON
                    </div>
                    <div id="download_zip" class="ui label download">
                        ZIP
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
